{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-run-current-day",
            "type": "shell",
            "command": "${workspaceFolder}/run_day.sh",
            "args": [
                "${fileDirname}",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}